{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "format": "prettier --list-different '**/*.{ts,json,md, gql}'",
    "format:fix": "prettier --write '**/*.{ts,json,md,gql}'",
    "tslint":
      "tslint -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' '**/*.ts'",
    "tslint:fix":
      "tslint --fix --format stylish -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' '**/*.ts'",
    "tsc": "tsc --noEmit",
    "lint": "yarn format && yarn tslint && yarn tsc",
    "lint:fix": "yarn format:fix && yarn tslint:fix && yarn tsc",
    "test": "yarn lint",
    "test:fix": "yarn lint:fix",
    "build":
      "tsc --outDir ./dist && cp ./src/manifest.json ./dist/manifest.json"
  },
  "devDependencies": {
    "@types/node": "^10.0.3",
    "prettier": "^1.12.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.1",
    "typestrict": "^0.0.8"
  }
}
